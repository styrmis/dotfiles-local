#!/bin/bash

if [ ! -d ~/.nvm ]; then
  cd ~/
  git clone https://github.com/creationix/nvm.git .nvm
  cd ~/.nvm
  git checkout v0.33.11
fi

brew tap homebrew/cask-fonts && brew cask upgrade font-source-code-pro

brew tap d12frosted/emacs-plus && brew upgrade emacs-plus

brew upgrade git fzf ripgrep tmux reattach-to-user-namespace macvim neovim rbenv pyenv the_silver_searcher
